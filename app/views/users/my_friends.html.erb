<div>
    <%= form_tag search_friend_path, remote: true, method: :get, class: "search-area" do %>
        <div class="form-group row">
            <div class="col-sm-9 no-right-padding">
                <%= text_field_tag :friend, params[:friend], placeholder: "Search", autofocus: true, class: "form-control form-control-lg"%>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon "search 2x" %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id="friend-results">

</div>

<% if !@friends.empty? %>
    <%= render partial: "friends/list" %>
<% else %>
    <h2>No friends =(</h2>
<% end %>