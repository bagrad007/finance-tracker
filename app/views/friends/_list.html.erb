
<div class="row friends-table">
    <div class="col-9">
        <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            <% @friends.each do |friend| %>
            <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>