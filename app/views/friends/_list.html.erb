<div class="results-block">
  <%= render 'layouts/messages' %>
</div>
<div class="row friends-table">
    <div class="col-9">
        <table class="table table-hover table-bordered">
        <thead>
            <tr>
            <th scope="col">Email</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @friends.each do |friend| %>
                <tr>
                    <td><%= friend.email %></td>
                    <td><%= friend.first_name %></td>
                    <td><%= friend.last_name %></td>
                    <td><%= link_to "View Profile", user_path(friend), class: "btn btn-success" %>
                        <%= link_to "Stop Following", friend_path(friend), class: "btn btn-warning", method: :delete %>
                    </td>
                </tr>
            <% end %>
        </tbody>
        </table>
    </div>
</div>